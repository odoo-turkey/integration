<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="inline_form">
        <div class="row">
            <div class="col-12 col-lg-8 garanti-form">
                <input name="provider_id" type="hidden" id="provider_id"
                       t-att-value="id"/>
                <input name="partner_id" type="hidden"
                       t-att-value="partner_id"/>
                <div id="credit-card">
                    <div class="form-group">
                        <label for="username">
                            <h6>Card Owner</h6>
                        </label>
                        <input type="text"
                               name="cardName"
                               placeholder="Card Owner Name"
                               class="form-control "/>
                    </div>
                    <div class="form-group">
                        <label for="cardNumber">
                            <h6>Card number</h6>
                        </label>
                        <div class="input-group">
                            <input type="text"
                                   maxlength="19"
                                   name="cardNumber"
                                   placeholder="XXXX XXXX XXXX XXXX"
                                   inputmode="numeric"
                                   class="form-control "/>
                            <span class="input-group-text text-muted">
                                <i class="fa fa-credit-card mx-1"></i>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="form-group">
                                <label>
                                    <h6>
                                        Expiration Date
                                    </h6>
                                </label>
                                <div class="input-group">
                                    <select name="validMonth"
                                            t-attf-class="form-select">
                                        <option value=""
                                                disabled="disabled"
                                                selected="selected">Month
                                        </option>
                                        <t t-foreach="range(1, 13)"
                                           t-as="r">
                                            <option t-att-value="r">
                                                <t t-esc="('%s' % r).zfill(2)"/>
                                            </option>
                                        </t>
                                    </select>
                                    <select name="validYear"
                                            t-attf-class="form-select">
                                        <option value=""
                                                disabled="disabled"
                                                selected="selected">Year
                                        </option>
                                        <t t-foreach="range(datetime.date.today().year-1, datetime.date.today().year+13)"
                                           t-as="r">
                                            <option t-att-value="r">
                                                <t t-esc="r"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group mb-4">
                                <label title="Three digit CV code on the back of your card">
                                    <h6>CVV
                                        <i class="fa fa-question-circle d-inline"></i>
                                    </h6>
                                </label>
                                <div class="input-group">
                                    <input type="text" name="cardCVV"
                                           maxlength="3"
                                           class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4 text-center my-auto">
                <t t-if="list(filter(lambda lg : lg[0] == lang, languages))[0][0] == 'tr_TR'">
                    <img class="img-fluid w-50 w-lg-75"
                         src="/payment_garanti/static/img/ssl_256bit.png"/>
                    <img class="img-fluid w-50 w-lg-75"
                         src="/payment_garanti/static/img/secure_payment.png"/>
                </t>
                <t t-else="">
                    <img class="img-fluid w-50 w-lg-75"
                         src="/payment_garanti/static/img/ssl_secured.png"/>
                </t>
            </div>
        </div>
        <div class="d-none" id="webform"></div>
    </template>

</odoo>
